---
import { getTranslations, getCurrentLocale } from '../utils/i18n';

interface Project {
  id: string;
  name: { en: string; ru: string };
  description: { en: string; ru: string };
  image: string;
  github: string;
  profitShare: string;
  contact: string;
  tags: string[];
}

interface Props {
  project: Project;
}

const { project } = Astro.props;
const currentUrl = new URL(Astro.request.url);
const currentLocale = getCurrentLocale(currentUrl);
const t = getTranslations(currentLocale);
---

<div class="bg-white rounded-xl shadow-md hover:shadow-lg transition-all duration-300 overflow-hidden group">
  <!-- Project Image -->
  <div class="aspect-video bg-gray-200 overflow-hidden">
    <img 
      src={project.image} 
      alt={project.name[currentLocale]}
      class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
      loading="lazy"
    />
  </div>
  
  <!-- Content -->
  <div class="p-6">
    <!-- Title and Tags -->
    <div class="mb-3">
      <h3 class="text-xl font-semibold text-gray-900 mb-2">
        {project.name[currentLocale]}
      </h3>
      <div class="flex flex-wrap gap-2">
        {project.tags.map(tag => (
          <span class="px-2 py-1 bg-primary-50 text-primary-700 text-xs font-medium rounded-md">
            {tag}
          </span>
        ))}
      </div>
    </div>
    
    <!-- Description -->
    <p class="text-gray-600 text-sm leading-relaxed mb-4 line-clamp-3">
      {project.description[currentLocale]}
    </p>
    
    <!-- Details Grid -->
    <div class="space-y-3 mb-4">
      <div class="flex items-center justify-between text-sm">
        <span class="text-gray-500 font-medium">{t.projects.profitShare}:</span>
        <span class="text-green-600 font-semibold bg-green-50 px-2 py-1 rounded">
          {project.profitShare}
        </span>
      </div>
      
      <div class="flex items-start justify-between text-sm">
        <span class="text-gray-500 font-medium">{t.projects.contact}:</span>
        <span class="text-gray-700 font-mono text-right flex-1 ml-2">
          {project.contact}
        </span>
      </div>
    </div>
    
    <!-- Actions -->
    <div class="pt-4 border-t border-gray-100">
      <div class="flex justify-between items-center">
        <a 
          href={currentLocale === 'en' ? `/projects/${project.id}` : `/ru/projects/${project.id}`}
          class="inline-flex items-center space-x-2 text-primary-600 hover:text-primary-700 font-medium text-sm transition-colors"
        >
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
          </svg>
          <span>{currentLocale === 'en' ? 'View Details' : 'Подробнее'}</span>
        </a>
        
        <a 
          href={project.github}
          target="_blank"
          rel="noopener noreferrer" 
          class="inline-flex items-center space-x-1 text-gray-600 hover:text-gray-800 text-sm transition-colors"
        >
          <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M10 0C4.477 0 0 4.484 0 10.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0110 4.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.203 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.942.359.31.678.921.678 1.856 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0020 10.017C20 4.484 15.522 0 10 0z" clip-rule="evenodd"></path>
          </svg>
          <span>GitHub</span>
        </a>
      </div>
    </div>
  </div>
</div>

<style>
  .line-clamp-3 {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>